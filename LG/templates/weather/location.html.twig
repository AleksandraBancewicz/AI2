{% extends 'base.html.twig' %}

{% block title %}Weather for {{ location.city }}{% endblock %}

{% block body %}
    <h1>Weather for {{ location.city }}, {{ location.country }}</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temperature (Â°C)</th>
        </tr>
        </thead>
        <tbody>
        {% for measurement in measurements %}
            <tr>
                <td>{{ measurement.date|date('Y-m-d H:i') }}</td>
                <td>{{ measurement.celsius }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No weather data available for this location.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}