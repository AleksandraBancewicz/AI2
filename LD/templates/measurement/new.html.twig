{% extends 'base.html.twig' %}

{% block title %}Add Measurement{% endblock %}

{% block body %}
    <h1>Add Measurement for {{ measurement.location.city }}</h1>

    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.date) }}
        {{ form_widget(form.date) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.celsius) }}
        {{ form_widget(form.celsius) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.location) }}
        {{ form_widget(form.location) }}
    </div>

    <button type="submit" class="btn btn-primary">Add Measurement</button>
    {{ form_end(form) }}

    <a href="{{ path('app_measurement_index') }}" class="btn btn-secondary">Back to Measurements</a>
{% endblock %}