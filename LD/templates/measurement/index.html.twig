{% extends 'base.html.twig' %}

{% block title %}Measurements{% endblock %}

{% block body %}
    <h1>Measurements</h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Celsius</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for measurement in measurements %}
            <tr>
                <td>{{ measurement.id }}</td>
                <td>{{ measurement.date|date('Y-m-d') }}</td>
                <td>{{ measurement.celsius }}</td>
                <td>{{ measurement.location.city }}</td>
                <td>
                    <a href="{{ path('app_measurement_new', {'id': measurement.location.id}) }}" class="btn btn-primary">Add Measurement</a>
                    <a href="{{ path('app_measurement_show', {'id': measurement.id}) }}" class="btn btn-info">Show</a>
                    <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}" class="btn btn-warning">Edit</a>
                    <form method="post" action="{{ path('app_measurement_delete', {'id': measurement.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ measurement.id) }}">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}