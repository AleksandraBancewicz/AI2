{% extends 'base.html.twig' %}

{% block title %}Add Measurement{% endblock %}

{% block body %}
    <h1>Add Measurement for {{ location.city }}, {{ location.country }}</h1>

    {{ form_start(form) }}

    <!-- Date field with error handling -->
    <div class="mb-3">
        {{ form_label(form.date) }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date) }}  <!-- Display validation errors for date -->
    </div>

    <!-- Celsius temperature field with error handling -->
    <div class="mb-3">
        {{ form_label(form.celsius) }}
        {{ form_widget(form.celsius, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.celsius) }}  <!-- Display validation errors for celsius -->
    </div>

    <!-- Location field with error handling -->
    <div class="mb-3">
        {{ form_label(form.location) }}
        {{ form_widget(form.location, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.location) }}  <!-- Display validation errors for location -->
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Add Measurement</button>

    {{ form_end(form) }}

    <!-- Back to location link -->
    <a href="{{ path('app_weather', {'city': location.city, 'countryCode': location.country}) }}" class="btn btn-secondary mt-3">Back to Location</a>
{% endblock %}
