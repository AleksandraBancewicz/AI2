{% extends 'base.html.twig' %}

{% block title %}Edit Location{% endblock %}

{% block body %}
    <h1>Edit Location</h1>

    {{ form_start(form) }}

    <!-- City field -->
    <div class="mb-3">
        {{ form_label(form.city) }}
        {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.city) }}  <!-- Display validation errors for city -->
    </div>

    <!-- Country field -->
    <div class="mb-3">
        {{ form_label(form.country) }}
        {{ form_widget(form.country, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.country) }}  <!-- Display validation errors for country -->
    </div>

    <!-- Latitude field -->
    <div class="mb-3">
        {{ form_label(form.latitude) }}
        {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.latitude) }}  <!-- Display validation errors for latitude -->
    </div>

    <!-- Longitude field -->
    <div class="mb-3">
        {{ form_label(form.longitude) }}
        {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.longitude) }}  <!-- Display validation errors for longitude -->
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    {{ form_end(form) }}

    <a href="{{ path('app_location_index') }}" class="btn btn-secondary mt-3">Back to list</a>

    <!-- Delete button -->
    <form method="post" action="{{ path('app_location_delete', {'id': location.id}) }}" onsubmit="return confirm('Are you sure?');" class="d-inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
{% endblock %}
